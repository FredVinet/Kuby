<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<AnchorPane>
    <!-- Encadré principal -->
    <BorderPane xmlns="http://javafx.com/javafx/8.0.171" style="-fx-border-color: black; -fx-border-width: 4;"
                AnchorPane.topAnchor="100"
                AnchorPane.leftAnchor="150">
        <top>
            <!-- Conteneur pour le titre avec un espacement réduit -->
            <VBox alignment="CENTER" style="-fx-padding: 20;">
                <Label text="Commande fournisseur #" style="-fx-font-size: 24; -fx-font-weight: bold;" />
            </VBox>
        </top>

        <center>
            <VBox alignment="CENTER" spacing="20" style="-fx-padding: 50;">
                <!-- Contenu principal -->
                <HBox alignment="CENTER_LEFT" spacing="100">
                    <!-- Partie Texte à gauche -->
                    <VBox prefWidth="400" spacing="10">
                        <Label text="Nom : Dupont" style="-fx-font-size: 20;" />
                        <Label text="Prénom : Jean" style="-fx-font-size: 20;" />
                        <Label text="Date : 20/01/2025" style="-fx-font-size: 20;" />
                        <Label text="Qté Articles : 12" style="-fx-font-size: 20;" />
                        <Label text="Adresse de livraison : 123 Rue de Paris" style="-fx-font-size: 20;" />
                        <Label text="Prix : 150,00 €" style="-fx-font-size: 20;" />
                    </VBox>

                    <!-- Partie Image à droite -->
                    <VBox alignment="CENTER" spacing="10">
                        <ImageView fitWidth="150" fitHeight="150" preserveRatio="true">
                            <image>
                                <Image url="@../assets/validate.png" />
                            </image>
                        </ImageView>
                        <Label text="Commande validée" style="-fx-font-size: 18; -fx-font-weight: bold;" />
                    </VBox>
                </HBox>
            </VBox>
        </center>
    </BorderPane>

    <!-- Conteneur des boutons en dessous du BorderPane -->
    <HBox spacing="30" alignment="CENTER" AnchorPane.topAnchor="550" AnchorPane.leftAnchor="375">
        <Button text="Modifier commande"
                style="-fx-background-color: #A55750; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10; -fx-border-radius: 5; -fx-background-radius: 5;" />
        <Button text="Supprimer commande"
                style="-fx-background-color: #A55750; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10; -fx-border-radius: 5; -fx-background-radius: 5;" />
    </HBox>
</AnchorPane>
