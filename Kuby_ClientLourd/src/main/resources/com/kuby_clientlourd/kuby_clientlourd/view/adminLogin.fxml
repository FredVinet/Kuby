<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.AnchorPane?>
<AnchorPane>
    <VBox xmlns="http://javafx.com/javafx"
          AnchorPane.topAnchor="150"
          AnchorPane.leftAnchor="250"
          alignment="CENTER"
          spacing="20"
          prefWidth="500"
          prefHeight="300"
          style="-fx-background-color: #f4f4f4; -fx-padding: 30; -fx-border-color: black; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10;"
          >

        <Label text="Connexion Admin" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #333;"/>

        <!-- Champs de saisie -->
        <TextField
            promptText="Email"
            style="-fx-padding: 8; -fx-pref-width: 280; -fx-border-color: #ccc; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;"
        />
        <PasswordField
            promptText="Mot de passe"
            style="-fx-padding: 8; -fx-pref-width: 280; -fx-border-color: #ccc; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;"
        />

        <!-- Bouton de validation -->
        <Button
            text="Se connecter"
            style="-fx-background-color: #A55750; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10; -fx-pref-width: 280; -fx-border-radius: 5; -fx-background-radius: 5;"
        />
    </VBox>
</AnchorPane>